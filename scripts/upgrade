#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# ENSURE DOWNWARD COMPATIBILITY
#=================================================

ynh_app_setting_set_default --key=language --value="en"
ynh_app_setting_set_default --key=version --value="Team"
ynh_app_setting_set_default --key=mostlymatter --value=0

#=================================================
# MIGRATING DATABASE
#=================================================

# Check if using MariaDB
# This migration should be done before the upgrade
if mysqlshow | grep -q "^| $db_name "; then
    # Mattermost recommands PostgreSQL over MySQL (and doesn't support MariaDB at all)
    # Migrate the database from MySQL/MariaDB to PostgreSQL
    remove_psql_in_case_of_error=1
    mariadb-to-pg
fi

#=================================================
# STOP SYSTEMD SERVICE
#=================================================
ynh_script_progression "Stopping $app's systemd service..."

ynh_systemctl --service=$app --action=stop

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Upgrading source files..."

if [ "$version" = "Enterprise" ]; then
  ynh_setup_source --dest_dir="$install_dir" --source_id="enterprise" --full_replace --keep="config/config.json plugins"
  binarie="mattermost"
elif [ "$version" = "Team" ]; then
  ynh_setup_source --dest_dir="$install_dir" --source_id="team" --full_replace --keep="config/config.json plugins"
  binarie="mattermost"
elif [ "$version" = "Mostlymatter" ]; then
  ynh_setup_source --dest_dir="$install_dir" --source_id="team" --full_replace --keep="config/config.json plugins"
  ynh_setup_source --dest_dir="$install_dir/bin" --source_id="mostlymatter"
  chmod +x "$install_dir/bin/mostlymatter"
  binarie="mostlymatter"
fi

#=================================================
# UPDATE A CONFIG FILE
#=================================================
ynh_script_progression "Updating $app's configuration files..."

ynh_hide_warnings ynh_config_add --template="config.json" --destination="$install_dir/config/config.json"

# Fix settings for Mattermost >= 11.1
# See https://github.com/mattermost/mattermost/issues/34084
ynh_write_var_in_file --file="$install_dir/config/config.json" --key="ExperimentalViewArchivedChannels" --value=true

chmod -R o-rwx "$install_dir"
chown -R $app:www-data "$install_dir"

#=================================================
# REAPPLY SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Upgrading system configurations related to $app..."

ynh_config_add_nginx

ynh_config_add_systemd

yunohost service add $app --description="Collaboration platform built for developers" --log="/var/log/$app/$app.log"

ynh_config_add_logrotate

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

ynh_systemctl --service=$app --action=start

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
